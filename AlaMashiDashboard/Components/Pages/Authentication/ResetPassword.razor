@page "/ResetPassword"
@inject ApiService ApiService
@inject NavigationManager NavManager
@using AdminDashboard.Services
@inject LocalizationService Localization
@inject IJSRuntime JS
@using Microsoft.AspNetCore.Components
@using MudBlazor

<PageTitle>@Localization.Get("reset.title") - @Localization.Get("app.title")</PageTitle>

<div class="login-wrapper" data-theme="@(_isDarkMode ? "dark" : "light")" dir="@Localization.Direction">
    <MudContainer MaxWidth="MaxWidth.Small" Class="login-container">

        <!-- Language & Theme Toggle Floating Button -->
        <div class="floating-controls">
            <MudTooltip Text="@Localization.Get("lang.toggle")">
                <MudIconButton Icon="@Icons.Material.Filled.Translate"
                               OnClick="ToggleLanguage"
                               Color="Color.Surface"
                               Size="Size.Large"
                               Class="control-btn" />
            </MudTooltip>
            <MudTooltip Text="@Localization.Get("theme.toggle")">
                <MudIconButton Icon="@(_isDarkMode? Icons.Material.Filled.DarkMode : Icons.Material.Filled.WbSunny)"
                               OnClick="ToggleTheme"
                               Color="Color.Surface"
                               Size="Size.Large"
                               Class="control-btn" />
            </MudTooltip>
        </div>

        <!-- Logo & Header Section -->
        <div class="login-header fade-in">
            <div class="logo-circle pulse-icon">
                <MudIcon Icon="@Icons.Material.Filled.LockReset" Size="Size.Large" Color="Color.Surface" />
            </div>
            <MudText Typo="Typo.h4" Class="login-title mt-3">@Localization.Get("reset.title")</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="login-subtitle">
                @Localization.Get("reset.subtitle")
            </MudText>
        </div>

        <!-- Reset Password Card -->
        <MudCard Elevation="0" Class="login-card slide-up">
            <MudCardContent Class="pa-6">
                <MudForm @ref="_form">

                    <!-- Email Display (Read-only) -->
                    @if (!string.IsNullOrEmpty(Email))
                    {
                        <div class="mb-4">
                            <MudTextField Value="@Email"
                                          Label="@Localization.Get("login.email")"
                                          Variant="Variant.Outlined"
                                          FullWidth="true"
                                          ReadOnly="true"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Email"
                                          AdornmentColor="Color.Secondary"
                                          Class="modern-input" />
                        </div>
                    }

                    <!-- OTP Field -->
                    <div class="mb-4">
                        <MudTextField @bind-Value="_otp"
                                      Label="@Localization.Get("reset.otp")"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Immediate="true"
                                      Required="true"
                                      RequiredError="@Localization.Get("reset.otp")"
                                      Validation="@(InputValidator.ValidateOtp)"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Pin"
                                      AdornmentColor="Color.Primary"
                                      Class="modern-input"
                                      Disabled="@_isResetting"
                                      HelperText="@Localization.Get("reset.otp_helper")" />
                    </div>

                    <!-- New Password Field -->
                    <div class="mb-4">
                        <MudTextField @bind-Value="_password"
                                      Label="@Localization.Get("reset.new_password")"
                                      Variant="Variant.Outlined"
                                      InputType="@_passwordInputType"
                                      FullWidth="true"
                                      Immediate="true"
                                      Required="true"
                                      RequiredError="@Localization.Get("reset.new_password")"
                                      Validation="@(InputValidator.ValidatePassword)"
                                      Adornment="Adornment.End"
                                      AdornmentIcon="@_passwordIcon"
                                      OnAdornmentClick="TogglePasswordVisibility"
                                      AdornmentAriaLabel="Toggle password visibility"
                                      Class="modern-input"
                                      Disabled="@_isResetting" />
                    </div>

                    <!-- Password Requirements -->
                    <MudPaper Class="pa-3 mb-4 requirements-box" Elevation="0">
                        <MudText Typo="Typo.caption" Class="font-weight-bold mb-2" Color="Color.Secondary">
                            @Localization.Get("reset.requirements")
                        </MudText>
                        <MudStack Spacing="1">
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetLengthIcon())"
                                         Size="Size.Small"
                                         Color="@(GetLengthColor())"
                                         Class="@(_isRtl ? "ml-2" : "mr-2")" />
                                <MudText Typo="Typo.caption" Color="@(GetLengthColor())">
                                    @Localization.Get("reset.req_length")
                                </MudText>
                            </div>
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetDigitIcon())"
                                         Size="Size.Small"
                                         Color="@(GetDigitColor())"
                                         Class="@(_isRtl ? "ml-2" : "mr-2")" />
                                <MudText Typo="Typo.caption" Color="@(GetDigitColor())">
                                    @Localization.Get("reset.req_number")
                                </MudText>
                            </div>
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetSpecialCharIcon())"
                                         Size="Size.Small"
                                         Color="@(GetSpecialCharColor())"
                                         Class="@(_isRtl ? "ml-2" : "mr-2")" />
                                <MudText Typo="Typo.caption" Color="@(GetSpecialCharColor())">
                                    @Localization.Get("reset.req_special")
                                </MudText>
                            </div>
                        </MudStack>
                    </MudPaper>

                    <!-- Success/Error Message -->
                    @if (!string.IsNullOrEmpty(_message))
                    {
                        <MudAlert Severity="@_messageSeverity"
                                  Class="mb-3"
                                  Dense="true"
                                  Variant="Variant.Filled"
                                  Icon="@(_messageSeverity == Severity.Success ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Error)">
                            @_message
                        </MudAlert>
                    }

                </MudForm>
            </MudCardContent>

            <MudCardActions Class="pa-6 pt-0">
                <MudStack Spacing="3" Style="width: 100%;">

                    <!-- Reset Button -->
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               FullWidth="true"
                               OnClick="HandleReset"
                               StartIcon="@Icons.Material.Filled.Save"
                               Class="login-button"
                               Disabled="@_isResetting">
                        @if (_isResetting)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="@(_isRtl ? "ml-2" : "mr-2")" />
                            <span>@Localization.Get("reset.resetting")</span>
                        }
                        else
                        {
                            <span>@Localization.Get("reset.submit")</span>
                        }
                    </MudButton>

                    <!-- Back to Login -->
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               Size="Size.Large"
                               FullWidth="true"
                               Href="/login"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               Class="back-button">
                        @Localization.Get("forgot.back")
                    </MudButton>

                </MudStack>
            </MudCardActions>
        </MudCard>

        <!-- Footer -->
        <div class="login-footer mt-4 text-center fade-in">
            <MudText Typo="Typo.caption" Color="Color.Secondary">
                @Localization.Get("login.footer")
            </MudText>
        </div>

    </MudContainer>
</div>

<style>
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        transition: background 0.3s ease;
    }

        .login-wrapper[data-theme="light"] {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        .login-wrapper[data-theme="dark"] {
            background: linear-gradient(135deg, #1a3a52 0%, #1a4d5e 100%);
        }

    .login-container {
        width: 100%;
        max-width: 480px;
    }

    .floating-controls {
        position: fixed;
        top: 1.5rem;
        display: flex;
        gap: 0.5rem;
        z-index: 1000;
        animation: slideDown 0.5s ease-out;
    }

    [dir="ltr"] .floating-controls {
        right: 1.5rem;
    }

    [dir="rtl"] .floating-controls {
        left: 1.5rem;
    }

    .control-btn {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s ease;
    }

        .control-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 0 8px 24px rgba(79, 172, 254, 0.4);
    }

    [data-theme="dark"] .logo-circle {
        background: linear-gradient(135deg, #2d5a7a 0%, #2d6773 100%);
    }

    .login-title {
        color: white;
        font-weight: 700;
        margin-top: 1.5rem;
    }

    .login-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1rem;
    }

    .login-card {
        border-radius: 20px;
        background: white;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    [data-theme="dark"] .login-card {
        background: #1e293b;
    }

    .modern-input {
        border-radius: 12px;
    }

        .modern-input ::deep .mud-input-outlined {
            border-radius: 12px;
        }

    .requirements-box {
        background: rgba(79, 172, 254, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(79, 172, 254, 0.2);
    }

    [data-theme="dark"] .requirements-box {
        background: rgba(79, 172, 254, 0.1);
        border-color: rgba(79, 172, 254, 0.3);
    }

    .login-button {
        height: 56px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-transform: none;
        box-shadow: 0 4px 14px rgba(79, 172, 254, 0.4);
        transition: all 0.3s ease;
    }

        .login-button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 172, 254, 0.6);
        }

        .login-button:active:not(:disabled) {
            transform: translateY(0);
        }

    .back-button {
        height: 56px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-transform: none;
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        transition: all 0.3s ease;
    }

    [dir="ltr"] .back-button:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateX(-4px);
    }

    [dir="rtl"] .back-button:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateX(4px);
    }

    .login-footer {
        color: rgba(255, 255, 255, 0.8);
    }

    .fade-in {
        animation: fadeIn 0.6s ease-in;
    }

    .slide-up {
        animation: slideUp 0.6s ease-out;
    }

    .pulse-icon {
        animation: pulse 3s infinite;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@media (max-width: 600px) {
        .login-wrapper {
            padding: 1rem;
        }

        .floating-controls {
            top: 1rem;
        }

        [dir="ltr"] .floating-controls {
            right: 1rem;
        }

        [dir="rtl"] .floating-controls {
            left: 1rem;
        }

        .login-card {
            border-radius: 16px;
        }

        .logo-circle {
            width: 70px;
            height: 70px;
        }

        .login-title {
            font-size: 1.75rem;
        }
    }
</style>

@code {
    [Parameter][SupplyParameterFromQuery] public string? Email { get; set; }

    private string _otp = "";
    private string _password = "";
    private string _message = "";
    private Severity _messageSeverity = Severity.Error;
    private bool _isResetting = false;
    private bool _isDarkMode = false;
    private bool _isRtl => Localization.IsArabic;
    private MudForm? _form;

    private bool _passwordVisible = false;
    private InputType _passwordInputType = InputType.Password;
    private string _passwordIcon = Icons.Material.Filled.VisibilityOff;

    protected override async Task OnInitializedAsync()
    {
        await Localization.InitializeAsync();
        Localization.OnLanguageChanged += async () => await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "app_theme");
                if (!string.IsNullOrEmpty(savedTheme))
                {
                    _isDarkMode = savedTheme == "dark";
                    StateHasChanged();
                }
            }
            catch { }
        }
    }

    private void TogglePasswordVisibility()
    {
        _passwordVisible = !_passwordVisible;
        _passwordInputType = _passwordVisible ? InputType.Text : InputType.Password;
        _passwordIcon = _passwordVisible ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;
    }

    private async Task ToggleTheme()
    {
        _isDarkMode = !_isDarkMode;
        try { await JS.InvokeVoidAsync("localStorage.setItem", "app_theme", _isDarkMode ? "dark" : "light"); }
        catch { }
    }

    private async Task ToggleLanguage()
    {
        await Localization.ToggleLanguageAsync();
    }

    private bool HasSpecialChar()
    {
        var specialChars = "!@#$%^&*(),.?\":{}|<>";
        return _password.Any(c => specialChars.Contains(c));
    }

    private string GetLengthIcon() => _password.Length >= 8 ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetLengthColor() => _password.Length >= 8 ? Color.Success : Color.Default;

    private string GetDigitIcon() => _password.Any(char.IsDigit) ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetDigitColor() => _password.Any(char.IsDigit) ? Color.Success : Color.Default;

    private string GetSpecialCharIcon() => HasSpecialChar() ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetSpecialCharColor() => HasSpecialChar() ? Color.Success : Color.Default;

    private async Task HandleReset()
    {
        _message = "";
        if (_form == null || string.IsNullOrEmpty(Email))
        {
            _message = Localization.IsArabic
                ? "رابط إعادة التعيين غير صالح. يرجى المحاولة مرة أخرى."
                : "Invalid reset link. Please try again.";
            _messageSeverity = Severity.Error;
            return;
        }

        await _form.Validate();
        if (!_form.IsValid) return;

        _isResetting = true;
        StateHasChanged();

        await Task.Delay(500);

        bool success = await ApiService.ResetPasswordAsync(Email, _otp, _password);

        _isResetting = false;

        if (success)
        {
            _message = Localization.IsArabic
                ? "✓ تم إعادة تعيين كلمة المرور بنجاح! جاري التحويل إلى تسجيل الدخول..."
                : "✓ Password reset successfully! Redirecting to login...";
            _messageSeverity = Severity.Success;
            StateHasChanged();

            await Task.Delay(1500);
            NavManager.NavigateTo("/login");
        }
        else
        {
            _message = Localization.IsArabic
                ? "فشل إعادة تعيين كلمة المرور. يرجى التحقق من رمز OTP والمحاولة مرة أخرى."
                : "Failed to reset password. Please check your OTP and try again.";
            _messageSeverity = Severity.Error;
            StateHasChanged();
        }
    }
}