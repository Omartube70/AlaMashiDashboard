@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    private string _otp = "";
    private string _password = "";
    private string _message = "";
    private Severity _messageSeverity = Severity.Error;
    private bool _isResetting = false;
    private bool _isRtl => Localization.IsArabic;
    private MudForm? _form;

    private bool _passwordVisible = false;
    private InputType _passwordInputType = InputType.Password;
    private string _passwordIcon = Icons.Material.Filled.VisibilityOff;

    private void TogglePasswordVisibility()
    {
        _passwordVisible = !_passwordVisible;
        _passwordInputType = _passwordVisible ? InputType.Text : InputType.Password;
        _passwordIcon = _passwordVisible ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;
    }

    private bool HasSpecialChar()
    {
        var specialChars = "!@#$%^&*(),.?\":{}|<>";
        return _password.Any(c => specialChars.Contains(c));
    }

    private string GetLengthIcon() => _password.Length >= 8
        ? Icons.Material.Filled.CheckCircle
        : Icons.Material.Filled.Circle;

    private Color GetLengthColor() => _password.Length >= 8
        ? Color.Success
        : Color.Default;

    private string GetDigitIcon() => _password.Any(char.IsDigit)
        ? Icons.Material.Filled.CheckCircle
        : Icons.Material.Filled.Circle;

    private Color GetDigitColor() => _password.Any(char.IsDigit)
        ? Color.Success
        : Color.Default;

    private string GetSpecialCharIcon() => HasSpecialChar()
        ? Icons.Material.Filled.CheckCircle
        : Icons.Material.Filled.Circle;

    private Color GetSpecialCharColor() => HasSpecialChar()
        ? Color.Success
        : Color.Default;

    private async Task HandleReset()
    {
        _message = "";

        if (_form == null || string.IsNullOrEmpty(Email))
        {
            _message = Localization.IsArabic
                ? "❌ رابط إعادة التعيين غير صالح"
                : "❌ Invalid reset link";
            _messageSeverity = Severity.Error;
            return;
        }

        await _form.Validate();
        if (!_form.IsValid) return;

        _isResetting = true;
        StateHasChanged();

        await Task.Delay(500);

        bool success = await ApiService.ResetPasswordAsync(Email, _otp, _password);

        _isResetting = false;

        if (success)
        {
            _message = Localization.IsArabic
                ? "✅ تم إعادة تعيين كلمة المرور بنجاح!"
                : "✅ Password reset successfully!";
            _messageSeverity = Severity.Success;
            StateHasChanged();

            await Task.Delay(1500);
            NavManager.NavigateTo("/login");
        }
        else
        {
            _message = Localization.IsArabic
                ? "❌ فشل إعادة التعيين. تحقق من رمز OTP"
                : "❌ Reset failed. Check your OTP";
            _messageSeverity = Severity.Error;
            StateHasChanged();
        }
    }
}