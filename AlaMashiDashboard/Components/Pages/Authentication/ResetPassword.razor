@page "/ResetPassword"
@inject ApiService ApiService
@inject NavigationManager NavManager
@using Microsoft.AspNetCore.Components
@using MudBlazor

<PageTitle>Reset Password - Ala Mashi Dashboard</PageTitle>

<div class="login-wrapper">
    <MudContainer MaxWidth="MaxWidth.Small" Class="login-container">

        <!-- Logo & Header Section -->
        <div class="login-header fade-in">
            <div class="logo-circle pulse-icon">
                <MudIcon Icon="@Icons.Material.Filled.LockReset" Size="Size.Large" Color="Color.Surface" />
            </div>
            <MudText Typo="Typo.h4" Class="login-title mt-3">Reset Your Password</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="login-subtitle">
                Enter the OTP sent to your email and create a new password
            </MudText>
        </div>

        <!-- Reset Password Card -->
        <MudCard Elevation="0" Class="login-card slide-up">
            <MudCardContent Class="pa-6">
                <MudForm @ref="_form">

                    <!-- Email Display (Read-only) -->
                    @if (!string.IsNullOrEmpty(Email))
                    {
                        <div class="mb-4">
                            <MudTextField Value="@Email"
                                          Label="Email Address"
                                          Variant="Variant.Outlined"
                                          FullWidth="true"
                                          ReadOnly="true"
                                          Adornment="Adornment.Start"
                                          AdornmentIcon="@Icons.Material.Filled.Email"
                                          AdornmentColor="Color.Secondary"
                                          Class="modern-input" />
                        </div>
                    }

                    <!-- OTP Field -->
                    <div class="mb-4">
                        <MudTextField @bind-Value="_otp"
                                      Label="OTP Code"
                                      Variant="Variant.Outlined"
                                      FullWidth="true"
                                      Immediate="true"
                                      Required="true"
                                      RequiredError="OTP is required"
                                      Validation="@(InputValidator.ValidateOtp)"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Pin"
                                      AdornmentColor="Color.Primary"
                                      Class="modern-input"
                                      Disabled="@_isResetting"
                                      HelperText="Enter the 6-digit code sent to your email" />
                    </div>

                    <!-- New Password Field -->
                    <div class="mb-4">
                        <MudTextField @bind-Value="_password"
                                      Label="New Password"
                                      Variant="Variant.Outlined"
                                      InputType="@_passwordInputType"
                                      FullWidth="true"
                                      Immediate="true"
                                      Required="true"
                                      RequiredError="Password is required"
                                      Validation="@(InputValidator.ValidatePassword)"
                                      Adornment="Adornment.End"
                                      AdornmentIcon="@_passwordIcon"
                                      OnAdornmentClick="TogglePasswordVisibility"
                                      AdornmentAriaLabel="Toggle password visibility"
                                      Class="modern-input"
                                      Disabled="@_isResetting" />
                    </div>

                    <!-- Password Requirements -->
                    <MudPaper Class="pa-3 mb-4 requirements-box" Elevation="0">
                        <MudText Typo="Typo.caption" Class="font-weight-bold mb-2" Color="Color.Secondary">
                            Password Requirements:
                        </MudText>
                        <MudStack Spacing="1">
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetLengthIcon())"
                                         Size="Size.Small"
                                         Color="@(GetLengthColor())"
                                         Class="mr-2" />
                                <MudText Typo="Typo.caption" Color="@(GetLengthColor())">
                                    At least 8 characters
                                </MudText>
                            </div>
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetDigitIcon())"
                                         Size="Size.Small"
                                         Color="@(GetDigitColor())"
                                         Class="mr-2" />
                                <MudText Typo="Typo.caption" Color="@(GetDigitColor())">
                                    At least one number
                                </MudText>
                            </div>
                            <div class="d-flex align-center">
                                <MudIcon Icon="@(GetSpecialCharIcon())"
                                         Size="Size.Small"
                                         Color="@(GetSpecialCharColor())"
                                         Class="mr-2" />
                                <MudText Typo="Typo.caption" Color="@(GetSpecialCharColor())">
                                    At least one special character (!@@#$%^&amp;*)
                                </MudText>
                            </div>
                        </MudStack>
                    </MudPaper>

                    <!-- Success/Error Message -->
                    @if (!string.IsNullOrEmpty(_message))
                    {
                        <MudAlert Severity="@_messageSeverity"
                                  Class="mb-3"
                                  Dense="true"
                                  Variant="Variant.Filled"
                                  Icon="@(_messageSeverity == Severity.Success ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Error)">
                            @_message
                        </MudAlert>
                    }

                </MudForm>
            </MudCardContent>

            <MudCardActions Class="pa-6 pt-0">
                <MudStack Spacing="3" Style="width: 100%;">

                    <!-- Reset Button -->
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               FullWidth="true"
                               OnClick="HandleReset"
                               StartIcon="@Icons.Material.Filled.Save"
                               Class="login-button"
                               Disabled="@_isResetting">
                        @if (_isResetting)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                            <span>Resetting...</span>
                        }
                        else
                        {
                            <span>Reset Password</span>
                        }
                    </MudButton>

                    <!-- Back to Login -->
                    <MudButton Variant="Variant.Outlined"
                               Color="Color.Secondary"
                               Size="Size.Large"
                               FullWidth="true"
                               Href="/login"
                               StartIcon="@Icons.Material.Filled.ArrowBack"
                               Class="back-button">
                        Back to Login
                    </MudButton>

                </MudStack>
            </MudCardActions>
        </MudCard>

        <!-- Footer -->
        <div class="login-footer mt-4 text-center fade-in">
            <MudText Typo="Typo.caption" Color="Color.Secondary">
                © 2025 Ala Mashi Dashboard. All rights reserved.
            </MudText>
        </div>

    </MudContainer>
</div>

<style>
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        padding: 2rem 1rem;
    }

    .login-container {
        width: 100%;
        max-width: 480px;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 0 8px 24px rgba(79, 172, 254, 0.4);
    }

    .login-title {
        color: white;
        font-weight: 700;
        margin-top: 1.5rem;
    }

    .login-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1rem;
    }

    .login-card {
        border-radius: 20px;
        background: white;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .modern-input {
        border-radius: 12px;
    }

        .modern-input ::deep .mud-input-outlined {
            border-radius: 12px;
        }

    .requirements-box {
        background: rgba(79, 172, 254, 0.05);
        border-radius: 12px;
        border: 1px solid rgba(79, 172, 254, 0.2);
    }

    .login-button {
        height: 56px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-transform: none;
        box-shadow: 0 4px 14px rgba(79, 172, 254, 0.4);
        transition: all 0.3s ease;
    }

        .login-button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(79, 172, 254, 0.6);
        }

        .login-button:active:not(:disabled) {
            transform: translateY(0);
        }

    .back-button {
        height: 56px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        text-transform: none;
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        transition: all 0.3s ease;
    }

        .back-button:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            transform: translateX(-4px);
        }

    .login-footer {
        color: rgba(255, 255, 255, 0.8);
    }

    .fade-in {
        animation: fadeIn 0.6s ease-in;
    }

    .slide-up {
        animation: slideUp 0.6s ease-out;
    }

    .pulse-icon {
        animation: pulse 3s infinite;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@media (max-width: 600px) {
        .login-wrapper {
            padding: 1rem;
        }

        .login-card {
            border-radius: 16px;
        }

        .logo-circle {
            width: 70px;
            height: 70px;
        }

        .login-title {
            font-size: 1.75rem;
        }
    }
</style>

@code {
    [Parameter][SupplyParameterFromQuery] public string? Email { get; set; }

    private string _otp = "";
    private string _password = "";
    private string _message = "";
    private Severity _messageSeverity = Severity.Error;
    private bool _isResetting = false;
    private MudForm? _form;

    private bool _passwordVisible = false;
    private InputType _passwordInputType = InputType.Password;
    private string _passwordIcon = Icons.Material.Filled.VisibilityOff;

    private void TogglePasswordVisibility()
    {
        _passwordVisible = !_passwordVisible;
        _passwordInputType = _passwordVisible ? InputType.Text : InputType.Password;
        _passwordIcon = _passwordVisible ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff;
    }

    // Helper methods for password requirements UI
    private bool HasSpecialChar()
    {
        var specialChars = "!@#$%^&*(),.?\":{}|<>";
        return _password.Any(c => specialChars.Contains(c));
    }

    private string GetLengthIcon() => _password.Length >= 8 ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetLengthColor() => _password.Length >= 8 ? Color.Success : Color.Default;

    private string GetDigitIcon() => _password.Any(char.IsDigit) ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetDigitColor() => _password.Any(char.IsDigit) ? Color.Success : Color.Default;

    private string GetSpecialCharIcon() => HasSpecialChar() ? Icons.Material.Filled.CheckCircle : Icons.Material.Filled.Circle;
    private Color GetSpecialCharColor() => HasSpecialChar() ? Color.Success : Color.Default;

    private async Task HandleReset()
    {
        _message = "";
        if (_form == null || string.IsNullOrEmpty(Email))
        {
            _message = "Invalid reset link. Please try again.";
            _messageSeverity = Severity.Error;
            return;
        }

        await _form.Validate();
        if (!_form.IsValid) return;

        _isResetting = true;
        StateHasChanged();

        await Task.Delay(500); // Small delay for UX

        // Now sending email, otp, and newPassword
        bool success = await ApiService.ResetPasswordAsync(Email, _otp, _password);

        _isResetting = false;

        if (success)
        {
            _message = "✓ Password reset successfully! Redirecting to login...";
            _messageSeverity = Severity.Success;
            StateHasChanged();

            await Task.Delay(1500);
            NavManager.NavigateTo("/login");
        }
        else
        {
            _message = "Failed to reset password. Please check your OTP and try again.";
            _messageSeverity = Severity.Error;
            StateHasChanged();
        }
    }
}